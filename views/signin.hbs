
 <!--hero section-->
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-form-title" style="background-image: url(http://im.rediff.com/getahead/2015/nov/25smile.jpg);">
					<span class="login100-form-title-1 tlt">
						Sign In
					</span>
				</div>

				<form class="login100-form validate-form" method="post" action="/signin">
					<div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
						<span class="label-input100">Username</span>
						<input  class="input100" type="text" name="username" placeholder="Enter username">
						<span class="focus-input100"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-18" data-validate = "Password is required">
						<span class="label-input100">Password</span>
						<input autocomplete="" class="input100" type="password" name="password" placeholder="Enter password">
						<span class="focus-input100"></span>
					</div>
                    <br>
                    <br>
					
					<div class="container-login100-form-btn">
						<button type="submit" class=" btn btn-success   login100-form-btn">
							Login
						</button>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
					</div>
                    <h5 style="margin:0; margin-top:40px; ">  Don't Have an account yet<a href="/signup"> Sign up </a></h5>
				</form>


	{{# if messages}}
	<div class="alert alert-danger"   style="
    margin: 0;
    border-left: 3px solid brown;
    font-weight: bold;">
        {{# each messages}}
        <div class="has-error">{{this}}</div>
        {{/each}}
		{{/if}}
    </div>
			</div>
		</div>
	</div>
	